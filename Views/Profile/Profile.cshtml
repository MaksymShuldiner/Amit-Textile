    <script type="text/javascript">
        function add0(e) {
                if ((parseFloat($(e).html()) * 10) % 10 == 0) {
                    $(e).html($(e).html() + ",00");
                }
                else {
                    $(e).html($(e).html().replace('.', ','));
                }
        }
        let previous;
        $('.buyItemList').find('input').focus(function () {
            previous = $(this).val();
        });
        $('.buyItemList').find('input').focusout(function () {
            let fullPrice = $(this).attr('price');
            let discountPrice = $(this).attr('pricediscount');
            let opt = $(this).attr('needforOpt');
            let optPrice = $(this).attr('optPrice');
            let all = $('.buyItemList').find('input');
            let wholeAm = 0;
            let id = $(this).parent().parent().prev().prev().prev().attr('data');
            let x = { ItemId: id, Amount: $(this).val() };
            let parent = $(this).parent().parent().parent().parent().parent().parent().parent().parent().parent();
            let th = $(this);
            let price = $(this).parent().parent().prev().find('.itemPriceList').find('span');
            let sum = $(th).parent().next().find('span');
            let bSum = $('.popupCartButtons').find('div').find('.summa');
            let warehouse = $(this).attr('data');
            let value = $(th).val();
            if (parseInt(value) > parseInt(warehouse)) {
                x = { ItemId: id, Amount: parseInt(warehouse) };
                $.ajax({
                    type: 'POST',
                    url: "@Url.Action("ChangeAmount", "Cart")",
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify(x),
                    success: function () {
                        $(th).val(warehouse);
                        $(bSum).html(parseFloat(parseFloat($(bSum).html())) - parseFloat($(price).html()) * previous);
                        if (parseInt($(th).val()) >= parseInt(opt)) {
                            $(price).html(optPrice + " ₴");
                        }
                        else {
                            if (parseInt(discountPrice) == 0) {
                                $(price).html(fullPrice + " ₴");
                            }
                            else {
                                $(price).html(discountPrice + " ₴");
                            }
                        }
                        $(sum).html(parseFloat($(price).html()) * warehouse);
                        $(bSum).html(parseFloat(parseFloat($(bSum).html())) + parseFloat($(sum).html()));
                        add0(sum);
                        add0(bSum);
                        $('#sum').attr('value', $('.summa').html());
                        $(bSum).html($(bSum).html() + ' грн');
                        let chPrice = $('.inCart').find('span');
                        $(chPrice[1]).html("Стоимостью " + $('.summa').html())
                        for (let i = 0; i < all.length; i++) {
                            wholeAm += parseInt($(all[i]).val());
                        }
                        $(chPrice[0]).html("В корзине " + wholeAm + " товаров");
                    }
                });
            }
            else if ($(th).val() <= 0) {
                x = { ItemId: id, Amount: 1 };
                $.ajax({
                    type: 'POST',
                    url: "@Url.Action("ChangeAmount", "Cart")",
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify(x),
                    success: function () {
                        $(th).val(1);
                        $(bSum).html(parseFloat(parseFloat($(bSum).html())) - parseFloat($(price).html()) * previous)
                        if (parseInt(discountPrice) == 0) {
                            $(price).html(fullPrice + " ₴");
