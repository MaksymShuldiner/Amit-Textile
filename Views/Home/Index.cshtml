    <script type="text/javascript">
        $('.changeAm').click(function () {
            function add0(e) {
                if ((parseFloat($(e).html()) * 10) % 10 == 0) {
                    $(e).html($(e).html() + ",00");
                }
                else {
                    $(e).html($(e).html().replace('.', ','));
                }
            }
            let item = $(this).parent().parent().parent().parent().parent().parent().parent().parent().parent();
            let form = $(item).parent();
            let id = $(this).attr('data');
            let sum = $(this).parent().parent().find('.sum').find('span');
            let id1 = $(this).attr('data1');
            let am1 = $(this).next();
            let am = $(this).prev();
            let operator = $(this).html();
            let url;
            if (operator == "-") {
                url = '@Url.Action("MinusItemInCart","Cart")'+"?ItemId="+id;
            }
            else {
                url = '@Url.Action("AddToCart","Cart")'+"?Api=1&TextileId="+id1;
            }
            let cost = parseFloat($(this).parent().parent().prev().find('.itemDescriptionList').find('.itemPriceList').find('span').html());
            $.ajax({
                type: 'GET',
                url: url,
                contentType: 'json',
                success: function () {
                    if (operator == "-") {
                        $(am1).html(parseInt($(am1).html()) - 1);
                        $(sum).html(parseFloat(parseFloat($(sum).html()) - cost));
