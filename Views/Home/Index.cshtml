            let lines = $('.line');
            let url;
            for (let i = 0; i < items.length; i++) {
                items[i].remove();
            }
            if (target == 'popular') {
                $('.popular').addClass('tpsSelected');
                url = "@Url.Action("ShowPopular","TextileApi")";
            }
            else if (target == 'new') {
                $('.new').addClass('tpsSelected');
                url = "@Url.Action("ShowNewComings","TextileApi")";
            }
            else if (target == 'top') {
                $('.top').addClass('tpsSelected');
                url = "@Url.Action("SellsLeaders","TextileApi")";
            }
