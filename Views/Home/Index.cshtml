@{
    ViewData["Title"] = "Home Page";
}
@model List<AmitTextile.Domain.Category>
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Интернет-магазин текстиля AmitTextile</title>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu+Condensed&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/adapt.css">
    <link rel="stylesheet" href="css/animate.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/main.css">
    <link rel="stylesheet" href="libs/FontAwesome/all.min.css">
    <link rel="stylesheet" href="libs/OwlCarousel/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css" />
    <script type="text/javascript" src="libs/jquery 3.4.1.min.js"></script>
</head>
<body>
    <header>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3 logo_container">
                </div>
                <div class="col-md-4 search_container">
                    <form class="search_form" action="#">
                        <input type="search" name="search" placeholder="Я ищу..."><a href="#"><button type="button">Поиск</button></a>
                    </form>
                </div>
                <div class="col-md-5 cart_container">
                    <a href="#"><i class="fas fa-shopping-cart"></i></a>
                    <span class="first">+38-(000)-000-00-00</span><br><span class="nFirst">+38-(000)-000-00-00</span><br><span class="nFirst">+38-(000)-000-00-00</span>
                    <a href="#login" class="login" data-fancybox="pp">Войти</a>
                </div>
            </div>
        </div>
    </header>
    <div class="categories">
        <span id="cat">Категории <i id="arrowDown" class="fas fa-chevron-down"></i><i id="arrowUp" class="fas fa-chevron-up hdn"></i></span>
        <div id="cats_hdn">
            <span>dwada</span>
        </div>
    </div>
    <div class="content">
        <div class="tps">
            <span>Популярное</span>
            <span>Новые поступления</span>
            <span>Лидеры продаж</span>
            <span>Скидки</span>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="line">

                    </div>
                </div>
                <div class="col-md-3">
                    <div class="line">

                    </div>
                </div>
                <div class="col-md-3">
                    <div class="line">

                    </div>
                </div>
                <div class="col-md-3">
                    <div class="line">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer></footer>
    <div class="hidden">
        <form id="login" action="#">
            <font>Эл. почта</font><br><br>
            <div class="inputFields">
                <input type="email" name="UserEmail" required><br><br>
                <font>Пароль</font><br><br>
                <input type="password" name="UserPassword" required><br><br>
            </div>
            <input type="submit" class="registerButton" value="Войти" name="login" required><br><br>
            <input type="checkbox" id="checkbox">  Запомнить меня<br><br>
            <a data-fancybox="helo" href="#register">Зарегистрироваться</a>
        </form>
    </div>
    <div class="hidden">
        <form action="#" id="register" class="register">
            Ваше имя<br><br>
            <div class="inputFields">
                <input type="text" name="UserName" required><br><br>
                Эл. почта<br><br>
                <input type="email" name="UserEmail" required><br><br>
                Придумайте пароль<br><br>
                <input type="password" name="UserPassword" required><br><br>
                Подтвердите пароль<br><br>
                <input type="password" required><br><br>
                Пароль должен содержать не менее 6 символов<br><br>
            </div>
            <input type="submit" class="registerButton" name="register" value="Зарегистрироваться">
        </form>
    </div>
    <script type="text/javascript" src="libs/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="js/main.js"></script>
    <script type="text/javascript" src="libs/FontAwesome/all.min.js"></script>
    <script type="text/javascript" src="libs/OwlCarousel/owl.carousel.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.js"></script>
</body>
</html>