    <script type="text/javascript" defer>
        let arrCat = [];
        let count = 1;
        let line = 1;
        $.ajax({
            type: 'GET',
            url:'@Url.Action("GetCategories", "TextileApi")',
            contentType: 'json',
            success: function (result) {
                arrCat = result;
                let Url;
                for (let i = 0; i < arrCat.length; i++) {
                    Url = "@ViewBag.Url" + "?CatId=" + arrCat[i].categoryId;
                    if (line % 2 == 0) {
                        $('#' + count).append('<a class="cats" href="'+Url+'">' + arrCat[i].name + '</a><br>');
                    }
                    else {
                        $('#' + count).append('<a class="cats r" href="'+Url+'">' + arrCat[i].name + '</a><br>');
                    }
                     if (arrCat.length - i <= 4) {
                        $('#' + count).append('<br>');
                    }
                    count++;
                    if (count > 4) {
                        count = 1;
                        line++;
                    }
                }
            }
        });
        $(document).ready(function () {
            let lineContainer = document.getElementsByClassName('line');
            let count = 0;
            $.ajax({
                type: 'GET',
                url:"@Url.Action("ShowPopular","TextileApi")",
                contentType: 'json',
                success: function (e) {
                    for (let i = 0; i < e.length; i++) {
                        if (e[i].warehouseAmount >= 30) {
                            $(lineContainer[count]).append("<div class='item'><div class='item_image'><img src='data:image/jpeg;base64," + e[i].base64StrigImg + "' alt='ItemImg'></div><a href='@ViewBag.BookUrl?TextileId=" + e[i].textileId + "' class='item_name'>" + e[i].name + "</a><div class='rateItemContainer'><input class='rateItem' value='" + e[i].stars + "'/> <a href='@ViewBag.BookUrl?TextileId=" + e[i].textileId + "&page=1&Section=CommentsReviews'> " + e[i].parentCommentReviews.length + " Отзывов</a></div><div class='container-fluid itm_field'><div class='row'><div class='col-md-6'><span class='item_cost'>" + e[i].price +" ₴</span><br/><span class='inStock'>В наличии</span></div><div class='col-md-6'><a href='@ViewBag.CartUrl?TextileId="+e[i].textileId+"' class='buy_item'><i class='fas fa-shopping-cart'0></i></a></div></div></div></div>")
                        }
                        else if (e[i].warehouseAmount < 30 && e[i].warehouseAmount != 0) {
                            $(lineContainer[count]).append("<div class='item'><div class='item_image'><img src='data:image/jpeg;base64," + e[i].base64StrigImg + "' alt='ItemImg'></div><a href='@ViewBag.BookUrl?TextileId=" + e[i].textileId + "' class='item_name'>" + e[i].name + "</a><div class='rateItemContainer'><input class='rateItem' value='" + e[i].stars + "'/> <a href='@ViewBag.BookUrl?TextileId=" + e[i].textileId + "&page=1&Section=CommentsReviews'> " + e[i].parentCommentReviews.length + " Отзывов</a></div><div class='container-fluid itm_field'><div class='row'><div class='col-md-6'><span class='item_cost'>" + e[i].price +" ₴</span><br/><span class='lowAm'>Заканчивается</span></div><div class='col-md-6'><a href='@ViewBag.CartUrl?TextileId="+e[i].textileId+"' class='buy_item'><i class='fas fa-shopping-cart'0></i></a></div></div></div></div>")
                        }
                        else {

                            $(lineContainer[count]).append("<div class='item'><div class='item_image'><img src='data:image/jpeg;base64," + e[i].base64StrigImg + "' alt='ItemImg'></div><a href='@ViewBag.BookUrl?TextileId="+e[i].textileId+"' class='item_name'>" + e[i].name + "</a><div class='rateItemContainer'><input class='rateItem' value='" + e[i].stars + "'/> <a href='@ViewBag.BookUrl?TextileId="+e[i].textileId+"&page=1&Section=CommentsReviews'> " + e[i].parentCommentReviews.length +" Отзывов</a></div><div class='container-fluid itm_field'><div class='row'><div class='col-md-6'><span class='item_cost'>" + e[i].price + " ₴</span><br/><span class='notInStock'>Нет в наличии</span></div><div class='col-md-6'><a href='@ViewBag.CartUrl?TextileId="+e[i].textileId+"' class='buy_item'><i class='fas fa-shopping-cart'0></i></a></div></div></div></div>")
                        }
                        $('.rateItem').rating({ displayOnly: true, size: 'xs', showCaption: false, language: "ru" });
                        if (count == 3) {
                            count = 0;
                        }
                        else {
                            count++;
                        }
                    }
                }
            });
            $('.popular').addClass('tpsSelected');
        });
    </script>
