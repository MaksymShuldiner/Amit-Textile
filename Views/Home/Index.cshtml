    <script type="text/javascript">
        function tgl() {
            $('#regS').fadeOut(400);
        }
        let errorArr = [];
        $("#registerBtn").click(function (e) {
        e.preventDefault();
        let name = document.getElementById('registerName').value;
        let mail = document.getElementById('registerEmail').value;
        let pass = document.getElementById('registerPass').value;
        let confirmPass = document.getElementById('confirmPass').value;
            let x = {"Email":mail,"Fio":name,"Password":pass,"PasswordConfirm":confirmPass}
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Register", "TextileApi")',
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(x),
                error: function(error) {
                    errorArr = error.responseText.split('"');
                    let errors = document.getElementsByClassName("error");
                    if (errors[0] != undefined) {
                        for (let i = 0; i < errors.length; i++) {
                            errors[i].remove();
                            i--;
                        }
                    }
                    if (errorArr[0] != undefined) {
                        for (let i = 1; i < errorArr.length - 1; i++) {
                            if (errorArr[i] != ",") {
                                $('#register').append('<span class="error">' + errorArr[i] + '<br><br></span>');
                            }
                        }
                    }
                },
                success: function (result) {
                    parent.jQuery.fancybox.getInstance().close();
                    parent.jQuery.fancybox.getInstance().close();
                    $('#regS').fadeIn(400);
                    setTimeout(tgl, 10000);
                }
            });
        });
    </script>
    <script type="text/javascript">
