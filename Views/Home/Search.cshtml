@model AmitTextile.Models.SearchModel
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Интернет-магазин текстиля AmitTextile</title>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu+Condensed&display=swap" rel="stylesheet">
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/reset.css">
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/libs/FontAwesome/all.min.css">
    <link rel="stylesheet" href="~/libs/OwlCarousel/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/slider.css" />
    <link rel="stylesheet" href="~/libs/themes/krajee-svg/theme.min.css">
    <link rel="stylesheet" href="~/css/star-rating.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css" />
    <link rel="stylesheet" href="~/css/adapt.css">
    <script type="text/javascript" src="~/libs/jquery 3.4.1.min.js"></script>
    <script type="text/javascript" defer>
        let arrCat = [];
        let count = 1;
        let line = 1;
        $.ajax({
            type: 'GET',
            url:'@Url.Action("GetCategories", "TextileApi")',
            contentType: 'json',
            success: function (result) {
                arrCat = result;
                let Url;
                for (let i = 0; i < arrCat.length; i++) {
                    Url = "@ViewBag.UrlCat" + "?CatId=" + arrCat[i].categoryId;
                    if (line % 2 == 0) {
                        $('#' + count).append('<a class="cats" href="'+Url+'">' + arrCat[i].name + '</a><br>');
                    }
                    else {
                        $('#' + count).append('<a class="cats r" href="'+Url+'">' + arrCat[i].name + '</a><br>');
                    }
                    if (arrCat.length - i <= 4) {
                        $('#' + count).append('<br>');
                    }
                    count++;
                    if (count > 4) {
                        count = 1;
                        line++;
                    }
                }
            }
        });

    </script>
</head>
<body>
    <div id="regS"><p>Ваш аккаунт был успешно зарегистрирован, письмо для подтверждения уже было отправлено вам на почту.</p><button class="close"><i class="fas fa-times-circle"></i></button></div>
    <div id="notConfirmed"><p>Для возможности добавлять товар в избранное подтвердите, пожалуйста, вашу почту</p><button class="close"><i class="fas fa-times-circle"></i></button></div>
    <button id="scrollBtn"><i class="fas fa-chevron-up"></i></button>
    <header>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 logo_container">
                    <a href="#"><img src="~/images/LogoGlobalTextile_Восстановлен_Монтажная_область_1_копия_2.png" /></a>
                </div>
                <div class="col-md-5 search_container">
                    <form class="search_form" action="@Url.Action("Search","Home")" method="get">
                        <input type="search" class="searchBar" name="StringQuery" placeholder="Я ищу..."><input class="searchButton" value="Поиск" type="submit" />
                    </form>
                </div>
                <div class="col-md-5 cart_container">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="favouriteList" href="@Url.Action("ShowFavourite", "Profile")" title="Избранные товары"><i class="fas fa-heart"></i></a>
                    }
                    else
                    {
                        <a class="favouriteList" href="#login" title="Избранные товары" data-fancybox="dsf"><i class="fas fa-heart"></i></a>
                    }
                    <div class="cart">
                        <a href="#"><i class="fas fa-shopping-cart"></i></a>

                        @if (ViewBag.Items.Count > 0)
                        {
                            <div class="cartWithItems inCart hidden">
                                <span>В корзине @ViewBag.Items.Count товаров</span>
                                <span>Стоимостью @ViewBag.Sum гришек</span>
                                <div class="btns">
                                    <a href="#" class="buy">Оформить заказ</a>
                                    <a href="#" class="toCart">Перейти в корзину</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="inCart hidden">
                                <i class="fas fa-shopping-cart"></i> <span>Ваша корзина пуста</span>
                            </div>
                        }
                    </div>
                    <span class="first">+38-(000)-000-00-00</span><br><span class="nFirst">+38-(000)-000-00-00</span><br><span class="nFirst">+38-(000)-000-00-00</span>
                    <a href="#login" class="login" data-fancybox="pp">Войти</a>
                </div>
            </div>
        </div>
    </header>
    <div class="categories">
        <span id="cat">Категории <i id="arrowDown" class="fas fa-chevron-down"></i><i id="arrowUp" class="fas fa-chevron-up hdn"></i></span>
        <div id="cats_hdn" class="hdn">
            <div class="container">
                <div class="row">
                    <div id="1" class="col-md-3"></div>
                    <div id="2" class="col-md-3"></div>
                    <div id="3" class="col-md-3"></div>
                    <div id="4" class="col-md-3"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="nameHolder mrg">
                        <h1 class="catName">
                            Избранное
                        </h1>
                    </div>
                    @foreach (var x in Model.Textiles)
                    {
                        <div class="listItems">
                            <div class="listItem">
                                <div class="container-fluid">
                                    <div class="row item_cells">
                                        <div class="col-md-12">
                                            <div class="container-fluid">
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="listImgContainer lic">
                                                            <img src="../images/img1.jpg" alt="awd">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="itemDescriptionList">
                                                            <div class="itemNameList">
                                                                <a href="@ViewBag.BookUrl?TextileId=@x.Textile.TextileId">
                                                                    <h2>@x.Textile.Name</h2>
                                                                </a>
                                                            </div>
                                                            <div class="rateItemContainer">
                                                                <input class="rateItem" value="@x.Textile.Stars.ToString().Replace(",", ".")" /> <a href="@ViewBag.Url?TextileId=@x.Textile.TextileId&page=1&Section=CommentsReviews"> @x.Textile.ParentCommentReviews.Count отзывов</a>
                                                            </div>
                                                            <div class="itemDescrList">
                                                                <span>@x.Textile.Description</span>
                                                            </div>
                                                            <div class="itemPriceList"><span>@(x.Textile.Price + " ₴")</span></div>
                                                            @if (x.Textile.WarehouseAmount >= 30)
                                                            {
                                                                <span class="inStock">
                                                                    Есть в наличии
                                                                </span>
                                                            }
                                                            @if (x.Textile.WarehouseAmount < 30 && x.Textile.WarehouseAmount != 0)
                                                            {
                                                                <span class="lowAm">
                                                                    Заканчивается
                                                                </span>
                                                            }
                                                            @if (x.Textile.WarehouseAmount == 0)
                                                            {
                                                                <span class="notInStock">
                                                                    Нет в наличии
                                                                </span>
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <div class="buyItemList">
                                                            <button class="buyItem">
                                                                <a href="#">
                                                                    <i class="fas fa-shopping-cart"></i> Купить
                                                                </a>
                                                            </button>
                                                        </div>
                                                        <div class="buttonsItemList">
                                                            <button class="fav">
                                                                @if (x.isFavourite)
                                                                {
                                                                    <p value="0" textileId="@x.Textile.TextileId" class="toFavourite">
                                                                        <i class="far fa-heart"></i>
                                                                    </p>
                                                                    <p value="1" textileId="@x.Textile.TextileId" class="toFavourite selected"><i class="fas fa-heart"></i></p>
                                                                }
                                                                else
                                                                {
                                                                    <p value="0" textileId="@x.Textile.TextileId" class="toFavourite selected">
                                                                        <i class="far fa-heart"></i>
                                                                    </p>
                                                                    <p value="1" textileId="@x.Textile.TextileId" class="toFavourite"><i class="fas fa-heart"></i></p>
                                                                }
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="navButtons">
                        <ul>
                            @if (Model.Model.HasPreviousPage)
                            {
                                <text>
                                    <li class="pagButtons"><span><i class="fas fa-chevron-left"></i>Назад</span></li>
                                    <a class="zxc" href="@ViewBag.SearchUrl?page=@(Model.Model.PageNumber - 1)&StringQuery=@Model.StringQuery"></a>
                                </text>
                            }
                            else
                            {
                                <text>
                                    <li class="pagButtons disabled"><span><i class="fas fa-chevron-left"></i> Назад</span></li>
                                </text>
                            }
                            @foreach (var x in Model.PagesCounterList)
                            {
                                <text>
                                    <a class="zxc1" href="@ViewBag.SearchUrl?page=@x&StringQuery=@Model.StringQuery">
                                        <li class="pagButtons number"><span>@x</span></li>
                                    </a>
                                </text>
                            }

                            @if (Model.Model.HasNextPage)
                            {
                                <text>
                                    <a class="zxc" href="@ViewBag.SearchUrl?page=@(Model.Model.PageNumber + 1)&StringQuery=@Model.StringQuery"><li class="pagButtons"><span>Вперед <i class="fas fa-chevron-right"></i></span></li></a>
                                </text>
                            }
                            else
                            {
                                <text>
                                    <li class="pagButtons disabled"><span> Вперед<i class="fas fa-chevron-right"></i></span></li>
                                </text>
                            }

                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="hidden">
            <form id="login">
                <font>Эл. почта</font><br><br>
                <div class="inputFields">
                    <input type="email" id="loginName" name="UserEmail" required><br><br>
                    <font>Пароль</font><br><br>
                    <input type="password" id="loginPass" name="UserPassword" required><button type="button" id="showPassLogin" class="showBtn"><div class="atv"><i class="fas fa-eye"></i></div><div class="atv hdn"><i class="fas fa-eye-slash"></i></div></button><br><br>
                </div>
                <input type="submit" id="loginButton" class="registerButton" value="Войти" name="login" required><br><br>
                <input type="checkbox" id="checkbox" value="true">  Запомнить меня<br><br>
                <a data-fancybox="helo" href="#register">Зарегистрироваться</a> <br>
            </form>
        </div>
        <div class="hidden">
            <form id="register" class="register">
                ФИО <br><br>
                <div class="inputFields">
                    <input type="text" id="registerName" name="UserName" required><br><br>
                    Эл. почта <span>*</span><br><br>
                    <input type="email" id="registerEmail" name="UserEmail" required><br><br>
                    Придумайте пароль <span>*</span><br><br>
                    <input type="password" id="registerPass" name="UserPassword" required><button type="button" id="showPassRegister" class="showBtn"><div class="atv1"><i class="fas fa-eye"></i></div><div class="atv1 hdn"><i class="fas fa-eye-slash"></i></div></button><br><br>
                    Подтвердите пароль <span>*</span><br><br>
                    <input type="password" id="confirmPass" required><button type="button" id="showPassConfirm" class="showBtn"><div class="atv2"><i class="fas fa-eye"></i></div><div class="atv2 hdn"><i class="fas fa-eye-slash"></i></div></button><br><br>
                    Пароль должен содержать не менее 6 символов<br><br>
                </div>
                <input type="submit" id="registerBtn" class="registerButton" name="register" value="Зарегистрироваться">
                <br />
            </form>
        </div>
        <footer>
        </footer>
        <script type="text/javascript">
        $('.fav').click(function () {
            let s = $(this).find('.toFavourite');
            let s1;
            let s2;
            for (let i = 0; i < s.length; i++) {
                if ($(s[i]).hasClass('selected')) {
                    s1 = $(s[i]).attr('value');
                    s2 = $(s[i]).attr('textileId');
                    break;
                }
            }
            let f = $(this);
            $.ajax({
                type: 'GET',
                url: '@Url.Action("IsAuthentificated","TextileApi")',
                contentType: 'json',
                success: function (e) {
                    if (e.isAuthentificated) {
                        let x = {}
                        if (s1 == '1') {
                             x= {"TextileId":s2,"Value":"0"}
                        }
                        else {
                             x = { "TextileId":s2,"Value":"1" }
                        }
                        $.ajax({
                            type: 'POST',
                            url: '@Url.Action("ToFavourite","TextileApi")',
                            contentType:'application/json; charset=utf-8',
                            data: JSON.stringify(x),
                            success: function (e){
                                f.find('.toFavourite').toggleClass('selected');
                            },
                            error: function (e) {
                                console.log(e);
                            }
                        })
                    }
                    else if (!e.isAuthentificated) {
                        $.fancybox.open($("#login"));
                    }

                }
            });
        });
        </script>
        <script type="text/javascript">
            function tgl() {
                $('#regS').fadeOut(400);
            }
            let errorArr = [];
            $("#registerBtn").click(function (e) {
                e.preventDefault();
                let name = document.getElementById('registerName').value;
                let mail = document.getElementById('registerEmail').value;
                let pass = document.getElementById('registerPass').value;
                let confirmPass = document.getElementById('confirmPass').value;
                let x = {"Email":mail,"Fio":name,"Password":pass,"PasswordConfirm":confirmPass}
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Register", "TextileApi")',
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify(x),
                    error: function(error) {
                        errorArr = error.responseText.split('"');
                        let errors = document.getElementsByClassName("error");
                        if (errors[0] != undefined) {
                            for (let i = 0; i < errors.length; i++) {
                                errors[i].remove();
                                i--;
                            }
                        }
                        if (errorArr[0] != undefined) {
                            for (let i = 1; i < errorArr.length - 1; i++) {
                                if (errorArr[i] != ",") {
                                    $('#register').append('<span class="error">' + errorArr[i] + '<br><br></span>');
                                }
                            }
                        }
                    },
                    success: function (result) {
                        parent.jQuery.fancybox.getInstance().close();
                        parent.jQuery.fancybox.getInstance().close();
                        $('#regS').fadeIn(400);
                        setTimeout(tgl, 10000);
                    }
                });
            });
        </script>
        <script type="text/javascript">
        $('#loginButton').click(function (e) {
            e.preventDefault();
            let mail = document.getElementById('loginName').value;
            let pass = document.getElementById('loginPass').value;
            let check = document.getElementById('checkbox');
            let bool;
            if (check.checked) {
                bool = true;
            }
            else {
                bool = false;
            }
            let x = { "Email": mail, "Password": pass, "Remember": bool };
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Login", "TextileApi")',
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(x),
                error: function (error) {
                    errorArr = error.responseText.split('"');
                    let errors = document.getElementsByClassName("error");
                    if (errors[0] != undefined) {
                        for (let i = 0; i < errors.length; i++) {
                            errors[i].remove();
                            i--;
                        }
                    }
                    if (errorArr[0] != undefined) {
                        for (let i = 1; i < errorArr.length - 1; i++) {
                            if (errorArr[i] != ",") {
                                $('#login').append('<span class="error">' + errorArr[i] + '<br><br></span>');
                            }
                        }
                    }
                },
                success: function (result) {
                    window.location.href = result;
                }
            });
        });
        </script>
        <script type="text/javascript" src="~/libs/themes/krajee-svg/theme.min.js"></script>
        <script type="text/javascript" src="~/js/star-rating.js"></script>
        <script type="text/javascript" src="~/js/ru.js"></script>
        <script type="text/javascript" src="~/libs/bootstrap.bundle.min.js"></script>
        <script type="text/javascript" src="~/js/main.js"></script>
        <script type="text/javascript" src="~/libs/FontAwesome/all.min.js"></script>
        <script type="text/javascript" src="~/libs/OwlCarousel/owl.carousel.min.js"></script>
        <script src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.js"></script>
</body>
</html>