    <script type="text/javascript">
        $('.adminOption').click(function () {
            if (!$(this).hasClass('adminOptionSelected')) {
                let option = $(this).find('span').html();
                $('.forma').find('form').remove();
                if (option == "Добавить товар") {
                    $('.forma').append('<form action="@Url.Action("CreateItem","Admin")" method="post" enctype="multipart/form-data"><label for="newItemName">Название товара</label><br /><input type="text" class="newItemName" name="Name" /><br /><label for="price">Цена товара</label><br /><input type="text" class="price" name="Price" /><br /><label for="warehouseAm">Кол-во товара на складе</label><br /><input type="text" class="warehouseAm" name="WarehouseAmount" /><div class="discContainer"><input type="checkbox" value="false" class="isOnDiscount" name="IsOnDiscount" /><label>&nbsp &nbspТовар со скидкой</label><br /><input placeholder="Цена со скидкой" type="text" class="priceWithDiscount hidden" name="Discount" /></div><label for="newDescription">Введите описание для товара</label><br /><textarea class="newDescription" name="Description"></textarea><div class="charactLine"><label>Характеристики</label><span class="addCharact"><i class="fas fa-plus"></i></span></div><div class="charactsContainer"></div><div class="categsContainer"><label>Выберите категорию</label><br /><div class="selectContainer"><div class="select-wrapper createSelect"><select name="CategoryId" class="categsSelect"></select></div></div><br /><label>Выберите подкатегорию</label><br /><div class="selectContainer"><div class="select-wrapper createSelect"><select name="ChildCategoryId" class="childCategsSelect"><option value="Нет">Нет</option></select></div></div></div><br /><label for="imageUpload">Выберите изображение для товара</label><br /><br /><input type="file" class="imageUpload" name="MainFile" /><label for="imageUploadMultiple">(Не обязательно)Выберите дополнительные изображение для товара(до 3 штук)</label><br /><br /><input type="file" multiple class="imageUploadMultiple" name="Files" /><input type="submit" class="createItem" value="Добавить товар" /></form>');
                    $('.childCategsSelect').select2({
                        language: "ru",
                        width: "500px"
                    });
                    $('.addCharact').click(function () {
                        $('.charactLine').append('<div class="newCharacteristic"><span class="removeCharact"><i class="fas fa-times"></i></span><label for="charactName">Введите имя для характеристики</label><br/><input class="charactName" type="text" name="CharacsNames"/><br/><label for="charactValue">Введите значение характеристики</label><br/><input class="charactValue" name="CharacsValues" type="text"/></div>')
                        $('.removeCharact').click(function () {
                            $(this).parent().remove();
                        });
                        $('.categsSelect').select2({
                            language: "ru",
                            width: "500px"
                        });
                    });
                    $('.isOnDiscount').change(function () {
                        if ($(this).prop('checked')) {
                            $(this).attr('value', 'true');
                        } else {
                            $(this).attr('value', 'false');
                        }
                        $('.priceWithDiscount').toggleClass('hidden');
                    });
                    $.ajax({
                        type: 'GET',
                        url: '@Url.Action("GetCats", "Admin")',
                        contentType: 'json',
                        success: function (result) {
                            arrCat = result;
                            let Url;
                            for (let i = 0; i < arrCat.length; i++) {
                                Url = "@ViewBag.Url" + "?CatId=" + arrCat[i].categoryId;
                                $('.categsSelect').append('<option value="' + arrCat[i].categoryId + '">' + arrCat[i].name + '</option>')
                                $('.categsSelect').select2({
                                    language: "ru",
                                    width: "500px"
                                });
                            }
                                let sel = $('.categsSelect').find(':selected');
                                for (let x = 0; x < arrCat.length; x++) {
                                    if (arrCat[x].categoryId == sel.attr('value')) {
                                        for (let m = 0; m < arrCat[x].childCategories.length; m++) {
                                            $('.childCategsSelect').append('<option value="' + arrCat[x].childCategories[m].childCategoryId + '">'+arrCat[x].childCategories[m].name+'</option>')
                                        }
                                    }
                                }
                                $('.categsSelect').change(function () {
                                    let opts = $('.childCategsSelect').find('option');
                                    let sel = $('.categsSelect').find(':selected');
                                    for (let p = 0; p < opts.length; p++) {
                                        opts[p].remove();
                                    }
                                    $('.childCategsSelect').append('<option value="Нет">Нет</option>');
                                    for (let x = 0; x < arrCat.length; x++) {
                                        if (arrCat[x].categoryId == sel.attr('value')) {
                                            for (let m = 0; m < arrCat[x].childCategories.length; m++) {
                                                $('.childCategsSelect').append('<option value="' + arrCat[x].childCategories[m].childCategoryId + '">'+arrCat[x].childCategories[m].name+'</option>')
                                            }
                                        }
                                    }
                                });
                        }
                    });
                    $.ajax({
                        type: 'GET',
                        url: "@Url.Action("GetCharachteristics","Admin")",
                        contentType: 'json',
                        success: function (e) {
                            for (let i = 0; i < e.length; i++) {
                                if (e[i].values.length != 0) {
                                    $('.charactsContainer').append('<div class="selectContainer"><label>' + e[i].name + '</label><br/><div class="select-wrapper createSelect"><select name="CharacsValues" class="characteristicSelect ' + i + '"></select></div> <span class="removeCharact forSelect"><i class="fas fa-times"></i></span><input type="hidden" name="CharacsNames" value="' + e[i].name + '"/></div >');
                                    $('.characteristicSelect').select2({
                                        language: "ru",
                                        width: "450px"
                                    });
                                    for (let j = 0; j < e[i].values.length; j++) {
                                        $('.' + i).append('<option value="' + e[i].values[j].value + '"> ' + e[i].values[j].value + '</option>');
                                    }
                                }
                                else {
                                    $('.charactsContainer').append('<div class="newCharact"><label class="charactName">' + e[i].name + '</label><br /><input class="charactValue" type="text" name="CharacsValues" /><span class="removeCharact"><i class="fas fa-times"></i></span><input type="hidden" value="' + e[i].name + '" name = "CharacsNames"/></div>');
                                }
                                $('.removeCharact').click(function () {
                                    $(this).parent().remove();
                                });
                            }
                        },
                    });
                }
                else if (option == "Добавить категорию") {
                    $('.forma').append('<form action="@Url.Action("CreateCategory","Admin")" method="post"><label>Название категории</label><br /><input type="text" class="newCatName" name="Name"/><div class="addNewChild"><label>Добавить подкатегорию</label> <span class="addChildCat"><i class="fas fa-plus"></i></span></div><input type="submit" class="createItem" value="Добавить категорию" /></form>');
                    $('.addChildCat').click(function () {
                        $.ajax({
                            type: 'GET',
                            url: "@Url.Action("GetChilds","Admin")",
                            contentType: 'json',
                            success: function (e) {
                                $('.addNewChild').append('<div class="selectContainer"><div class="select-wrapper createSelect"><select name="ChildCategoryId" class="childSelect ' + counter + '"></select></div> <span class="removeCharact forSelect"><i class="fas fa-times"></i></span></div >');
                                $('.childSelect').select2({
                                    language: "ru",
                                    width: "450px"
                                })
                                for (let i = 0; i < e.length; i++) {
                                    $('.' + counter).append('<option value="' + e[i].childCategoryId + '">' + e[i].name + '</option>');
                                }
                                counter++;
                                $('.removeCharact').click(function () {
                                    $(this).parent().remove();
                                });
                            }
                        });
                    });
                }
                else if (option == "Добавить подкатегорию") {
                    $('.forma').append('<form action="@Url.Action("CreateChildCategory","Admin")" method="post"><label>Название подкатегории</label><br/><input type="text" class="newChildName" name="name" /><br/><input type="submit" class="createItem" value="Добавить подкатегории" /></form>');
                }
                else if (option == "Добавить характеристику") {
                    $('.forma').append('<form action="@Url.Action("CreateCharachteristic","Admin")" method="post"><label>Имя характеристики</label><br /><input type="text" class="newCharactName" name="Name"/><br/><input type="checkbox" class="nP" /><label>&nbsp &nbsp Шаблонные значения</label><div class="pat"></div><input type="submit" class="createItem" value="Добавить характеристику"/></form>');
                    $('.nP').change(function () {
                        if ($(this).prop('checked')) {
                            $('.pat').append('<div class="patterns"><label>Добавить шаблонное значение</label><span class="addPattern"><i class="fas fa-plus"></i></span></div>');
