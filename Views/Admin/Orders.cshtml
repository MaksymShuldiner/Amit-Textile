                                    <span>@order.Sum₴</span>
                                </td>
                                <td class="wrapTd">
                                    <div class="showOrder">
                                        <span><i class="fas fa-chevron-down"></i><i class="fas fa-chevron-up hidden"></i></span>
                                    </div>
                                    <div class="orderExtra hidden">
                                        <table class="orderDetails">
                                            <tr>
                                                <th>Фото товара</th>
                                                <th>Название товара</th>
                                                <th>Кол-во товара</th>
                                                <th>Сумма</th>
                                            </tr>
                                            @foreach (var item in order.ItemOrders)
                                            {
                                                <tr class="orderDetailsRow">
                                                    <td>
                                                        <img class="orderDetailsImg" src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Item.Textile.MainImage.ByteImg))" alt="orderDetailsImg" />
                                                    </td>
                                                    <td>
                                                        <a class="orderItemName" href="#">@item.Item.Textile.Name</a>
                                                    </td>
                                                    <td>
                                                        <span>@item.Item.ItemsAmount</span>
                                                    </td>
                                                    <td>
                                                        <span>@(item.Item.Textile.Price* item.Item.ItemsAmount)</span>
                                                    </td>
                                                </tr>
                                            }
                                        </table>
                                    </div>
                                </td>
                            </tr>

                        </table>
                    </div>
                }

            }
        </div>
        <div class="navButtons">
            <ul>
                @if (Model.Model.HasPreviousPage)
                {
                    <text>
                        <a class="zxc" href="@ViewBag.Url?page=@(Model.Model.PageNumber-1)"><li class="pagButtons"><span><i class="fas fa-chevron-left"></i> Назад</span></li></a>
                    </text>
                }
                else
                {
                    <text>
                        <li class="pagButtons disabled"><span><i class="fas fa-chevron-left"></i> Назад</span></li>
                    </text>
                }
                @foreach (var x in Model.PagesCounterList)
                {
                    <text>
                        <a class="zxc1" href="@ViewBag.Url?page=@x">
                            <li class="pagButtons number"><span>@x</span></li>
                        </a>
                    </text>
                }

                @if (Model.Model.HasNextPage)
                {
                    <text>
                        <a class="zxc" href="@ViewBag.Url?page=@(Model.Model.PageNumber+1)"><li class="pagButtons"><span>Вперед <i class="fas fa-chevron-right"></i></span></li></a>
                    </text>
                }
                else
                {
                    <text>
                        <li class="pagButtons disabled"><span> Вперед <i class="fas fa-chevron-right"></i></span></li>
                    </text>
                }

            </ul>
        </div>
    </div>
